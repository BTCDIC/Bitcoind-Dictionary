<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">


    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/bitcoin"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintBottom_toTopOf="@+id/persianBitDictionary">

    </ImageView>
   <LinearLayout
       android:id="@+id/persianBitDictionary"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:background="@drawable/ic_rectangle"
       android:gravity="end"
       tools:ignore="MissingConstraints">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_margin="@dimen/_10sdp"
           android:layout_gravity="center"
           android:gravity="center"
           android:textSize="@dimen/_14sdp"
           android:textColor="@color/black"
           android:text="@string/sort_by_persian">
       </TextView>
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/search"
        android:contentDescription="TODO">
    </ImageView>
   </LinearLayout>

    <LinearLayout
        android:id="@+id/englishBitDictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rectangle"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/persianBitDictionary"
        android:gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_14sdp"
            android:text="@string/sort_by_english"
            android:textColor="@color/black">
        </TextView>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_20sdp"
            android:src="@drawable/sortbyalphabet">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sourceitDictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rectangle"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/englishBitDictionary"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/source"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp">

        </TextView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>